<div id="tableContainer" class="tableContainer">
    <table class="scrollTable" width="100%" cellspacing="0" cellpadding="0" border="0">
        <thead class="fixedHeader">
            <tr class="alternateRow">
                <th width="20">
                    <%= check_box_tag 'selectall' %>
                </th>
                <th>
                    Tasks
                </th>
                <th>
                    Description
                </th>
                <th>
                    Tools
                </th>
            </tr>
        </thead>
        <tbody class="scrollContent">
            <% @tasks.each do |task| -%>
            <tr class="<%= cycle('normalRow','alternateRow') %>">
                <td width="20">
                    <%= check_box_tag 'hq_task_ids[]', task.id %>
                </td>
                <td>
                    <%= task.name %>
                </td>
                <td>
                </td>
                <td>
                </td>
            </tr>
            <% end -%>
        </tbody>
    </table>
</div>
<%= submit_to_remote 'procs_by_tasks', 'Filter', :url => { :action => 'procs_by_tasks' } %>
