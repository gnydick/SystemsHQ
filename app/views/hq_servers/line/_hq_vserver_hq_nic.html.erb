<div class="hq_vserver_hq_nic">
    <% new_or_existing = hq_vserver_hq_nic.new_record? ? 'new' : 'existing' %>
    <% prefix = "hq_vserver[#{new_or_existing}_hq_nic_attributes][#{hq_vserver_hq_nic.id}]" %>
    <% fields_for prefix, hq_vserver_hq_nic do |hq_vserver_hq_nic_form| -%>
    <p>
        Interface: <%= hq_vserver_hq_nic_form.text_field :name %>IP Address: <%= hq_vserver_hq_nic_form.text_field :ipaddr %>
       
        Connected To: <%= remotenic_selector(prefix,hq_vserver_hq_nic.hq_remotenic_id, :prompt => true) %>
        <span class="remove"><%= link_to_function "remove", "$(this).up('.hq_vserver_hq_nic').remove()" %></span>
    </p>
    <% end -%>
</div>
